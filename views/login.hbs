<!DOCTYPE html>
<html>

<head>
    <title>SWMS | Login</title>
</head>

<body>
    <div class="container">
        <div class="login-form vertical-center">
            <div class="card">
                <h5 class="card-header text-center">
                    <marquee direction="left" scrollamount= 2><span id="greetings">WELCOME !!</span></marquee>
                </h5>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-user"></i></div>
                                </div>
                                <input type="text" class="form-control" id="username" placeholder="Username" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-lock"></i></div>
                                </div>
                                <input type="password" class="form-control" id="password" placeholder="Password" required>
                            </div>
                        </div>
                        <button type="button" id="login" class="btn btn-outline-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    swms.initLogin();
</script>

</html>